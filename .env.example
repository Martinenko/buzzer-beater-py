# Database (MySQL on PythonAnywhere)
DATABASE_URL=mysql+aiomysql://username:password@username.mysql.pythonanywhere-services.com/username$dbname

# BuzzerBeater API
BB_API_URL=https://bbapi.buzzerbeater.com

# Web app URL (used for email verification links)
WEB_APP_URL=http://localhost:4200

# Security
SECRET_KEY=your-secret-key-here

# Email (SMTP)
# For Railway/cloud platforms: use PORT 587 with SMTP_USE_TLS=true
# For localhost: PORT 465 with SMTP_USE_TLS=false is fine
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=587
SMTP_USERNAME=help@bbscout.me
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=no-reply@bbscout.me
SMTP_USE_TLS=true

# CORS (comma-separated list, optional - defaults are in config.py)
# CORS_ORIGINS=["http://localhost:4200","https://your-app.netlify.app"]
